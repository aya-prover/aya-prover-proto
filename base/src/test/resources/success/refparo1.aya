-- #2 in public repo
data Entity : Set
  | john

struct EventT : Set
  | agentT : Set

struct Event (t : EventT) : Set
  | agent : t.agentT

data Run (e : Event (new EventT { | agentT => Entity })) : Set
  | (john) => run1

def mkVerb {t : EventT} (p : Event t -> Set) : (Event t -> Set) -> Set
  => \f => Sig (e : Event t) ** (Sig (p e) ** (f e))
